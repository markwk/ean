	  'ean_hotel_images' => array(
	    'variables' => array(
	      'hotel' => array(),
	    ),
	    'template' => 'templates/ean-hotel-images',
	  ),
		'ean_hotel_main_image' => array(
	    'variables' => array(
	      'hotel' => array(),
	    ),
	    'template' => 'templates/ean-hotel-main-image',
	  ),
		'ean_hotel_description' => array(
	    'variables' => array(
	      'hotel' => array(),
	    ),
	    'template' => 'templates/ean-hotel-description',
	  ),
